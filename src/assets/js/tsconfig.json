{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {}
  },
  "lib": ["es2015"],
  "include": [ "./**/*" ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
